<%= render partial: "layouts/header" %>
<% @rides_start.each do |start, ride| %>
  <div class="col-md-12">
    <h4><%= start %></h4>
    <% for r in ride %>
      <div class="panel panel-success col-md-3">
        <div class="panel-heading"><%= r.start %> to <%= r.destination %></div>
        <div class="panel-body">
          <table class="table">
            <thead>
              <th> Date </th>
              <th> Seats left </th>
            </thead>
            <tbody>
              <td><%= r.time.strftime("%b-%d %H:%M") %></td>
              <td><%= r.seats_left %></td>
            </tbody>
          </table>
        </div> <!--end panel-body !-->
      </div> <!-- end panel !-->
    <% end %>
    </div> <!-- end col-md-12 !-->
<% end %>

